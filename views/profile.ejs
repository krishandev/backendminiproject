<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="border border-red-300 flex flex-col justify-center items-center p-5 gap-3">
        <h1 class="text-3xl font-bold">Profile Page </h1>
        <a href="/logout"><button class="bg-red-300 p-1 rounded">Logout</button></a>
        
        <h2 class="text-xl">Hello, <span class="font-bold text-green-500"><%=user.name%></span></h2>
        <div>
            <h3 class="bg-gray-500 text-white p-1 rounded my-3">Create Post Here</h3>
            
        <form action="/post" method="post" class="gap-3 flex flex-col">
            
            <textarea class="border border-gray-300 p-1" placeholder="What's in Your Mind?" name="content"></textarea>
            <button class="bg-blue-300">Publish Post</button>
        </form>
        </div>

        <div class="border border-gray-300 p-2">
            <h3 class="text-xl font-semibold">Your Published Posts</h3>
            <div class="flex flex-col gap-3 mt-3 border border-gray-300 p-2">
                <% user.posts.reverse().forEach(function(post){ %>
                    <h4 class="text-blue-500 underline">@<%=user.username %></h4>
                <p><%=post.content %></p>
                <div>
                    <p class="text-blue-200"><%=post.likes.length %> Likes</p>
                </div>
                <div class="flex gap-3 border-b-2 border-green-400">
                    <button class="text-blue-800"><a href="/like/<%=post._id%>"><%=post.likes.indexOf(user._id)===-1 ? "Like" : "unlike" %></a></button>
                    <button><a href="/edit/<%=post._id %>">Edit</a></button>
                </div>
                
                
                <%}) %>
                
            </div>

           
            
        </div>
    </div>
    
</body>
</html>